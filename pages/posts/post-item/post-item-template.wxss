
.post-container {
  display: flex;
  flex-direction: column;
  padding-bottom: 5px;
  margin-top: 22rpx;
  margin-bottom: 40rpx;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  background-color: #fff;
}

.post-author-info {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author-info .icon {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-author-info .date {
  margin-left: 20rpx;
  margin-bottom: 20px;
  vertical-align: middle;
  font-size: 26rpx;
}

.post-title {
  margin-bottom: 10px;
  margin-left: 10px;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-left: 16px;
  margin-bottom: 15px;
  margin: auto 0;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  margin-left: 16px;
  flex-direction: row;
  font-size: 13px;
  line-height: 16px;
}

.post-like-image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-text {
  margin-right: 20px;
  vertical-align: middle;
}